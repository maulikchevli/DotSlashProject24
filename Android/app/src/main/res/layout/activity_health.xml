<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.oneclick.HealthActivity">

    <EditText
        android:id="@+id/edit_text"
        android:text="Enter disease"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <EditText
        android:id="@+id/edit_text2"
        android:text="Enter symptoms"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="44dp" />


    <Button
        android:id="@+id/fetch_symptoms"
        android:text="Fetch Symptoms"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/fetch_diseases"
        android:text="Fetch Diseases"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/symptoms"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/diseases"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
