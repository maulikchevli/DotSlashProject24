<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.android.oneclick.StoreSymptomsActivity">

    <EditText
        android:id="@+id/edit_text"
        android:text="Enter Symptoms"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <Button
        android:id="@+id/store_data"
        android:text="Store Symptoms in database"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/get_data"
        android:text="Get symptoms from database"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
